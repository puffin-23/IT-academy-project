<div class="cakes-container" id="cakesContainer">
    <!-- Динамически загружаемые торты будут помещены сюда -->
</div>

<script>
    // Пример данных о тортах, полученных с сервера по URL "/cakes"
    const cakes = [
        { id: 1, name: 'Шоколадный торт', price: '500 руб', image: 'https://example.com/chocolate_cake.jpg' },
        { id: 2, name: 'Ванильный торт', price: '450 руб', image: 'https://example.com/vanilla_cake.jpg' },
        { id: 3, name: 'Торт с ягодами', price: '600 руб', image: 'https://example.com/berry_cake.jpg' },
        // Добавьте больше тортов при необходимости
    ];

    const cakesContainer = document.getElementById('cakesContainer');

    cakes.forEach(cake => {
        const cakeItem = document.createElement('a');
        cakeItem.href = `/cake:${cake.id}`; // Ссылка на профиль торта
        cakeItem.className = 'cake-item';

        const image = document.createElement('img');
        image.src = cake.image; // URL изображения торта
        image.alt = `${cake.name} изображение`;

        const cakeInfo = document.createElement('div');
        cakeInfo.className = 'cake-info';

        const cakeName = document.createElement('h3');
        cakeName.innerText = cake.name;

        const cakePrice = document.createElement('p');
        cakePrice.innerText = cake.price;

        cakeInfo.appendChild(cakeName);
        cakeInfo.appendChild(cakePrice);
        cakeItem.appendChild(image);
        cakeItem.appendChild(cakeInfo);
        cakesContainer.appendChild(cakeItem);
    });
</script>

